<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backconstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".t7lost.t7_1_show_lost_item"
    android:background="@drawable/backgroundhomescreen"
    >

    <ImageView
        android:id="@+id/lostitemheadtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewfound"
        app:layout_constraintEnd_toStartOf="@+id/addlostitembut"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backtouploadlost"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lostitemsheadtext" />

    <ImageButton
        android:id="@+id/backtouploadlost"
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/backbutton"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewfound"
        app:layout_constraintEnd_toStartOf="@+id/ilostsomethingheadtext"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbut" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewfound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="50dp" />

    <ImageButton
        android:id="@+id/addlostitembut"
        android:layout_width="61dp"
        android:layout_height="39dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="6dp"
        android:background="#FFFFFF"
        android:src="@drawable/addfounditem"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewfound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>